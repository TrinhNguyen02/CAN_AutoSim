#ifndef INC_SSD1306_UDF_H_
#define INC_SSD1306_UDF_H_

void msg_7x10(char* msg, uint8_t x, uint8_t y);
void msg_11x18(char* msg, uint8_t x, uint8_t y){
	ssd1306_SetCursor(x, y);
	ssd1306_WriteString(msg, Font_11x18, White);
	ssd1306_UpdateScreen();
}

void msg_uint(uint16_t number, uint8_t x, uint8_t y)
{
	char c_number[4];
	sprintf(c_number,"%3d",number);
	msg_11x18(c_number, x, y);
}


#endif /* INC_SSD1306_UDF_H_ */
