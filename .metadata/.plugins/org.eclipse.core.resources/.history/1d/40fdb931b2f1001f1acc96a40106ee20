/* Private variables ---------------------------------------------------------*/
ADC_HandleTypeDef hadc1;

CAN_HandleTypeDef hcan;

TIM_HandleTypeDef htim2;

osThreadId recieve_msgHandle;
osThreadId control_lightHandle;
osMessageQId light_msgHandle;
/* USER CODE BEGIN PV */

uint8_t tmp_cnt = 0;
uint8_t light_msg = 0;
enum light_mode_t light_mode;


